#include "io.h"
#include "alt_types.h"
#include "system.h"
#include "unistd.h"
#include "altera_avalon_pio_regs.h"

// Definir la dirección base del buzzer según la configuración del sistema
#define BUZZER_BASE 0x0

// Función para encender el buzzer
void buzzer_on() {
    IOWR_ALTERA_AVALON_PIO_DATA(BUZZER_BASE, 1);
}

// Función para apagar el buzzer
void buzzer_off() {
    IOWR_ALTERA_AVALON_PIO_DATA(BUZZER_BASE, 0);
}

// Función para hacer que el buzzer suene por un tiempo determinado
void beep(int duration_ms) {
    buzzer_on();
    usleep(duration_ms * 1000);  // Convertir milisegundos a microsegundos
    buzzer_off();
}

int main() {
    while (1) {
        beep(500);  // Hacer que el buzzer suene por 500 ms
        usleep(500000);  // Esperar 500 ms antes de volver a sonar
    }
    return 0;
}
