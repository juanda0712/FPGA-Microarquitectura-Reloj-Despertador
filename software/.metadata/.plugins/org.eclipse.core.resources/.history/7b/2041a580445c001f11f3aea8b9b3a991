#include "timer.h"

// Función para actualizar el reloj
void update_clock() {
    // Actualizar los segundos
    seconds++;
    if (seconds >= 60) {
        seconds = 0;
        minutes++;
        if (minutes >= 60) {
            minutes = 0;
            hours++;
            if (hours >= 24) {
                hours = 0;
            }
        }
    }
}
