#ifndef TIMER_H
#define TIMER_H

#include "altera_avalon_timer_regs.h"
#include "system.h"
#include "io.h"
#include "alt_types.h"

typedef struct {
    volatile int hours;
    volatile int minutes;
    volatile int seconds;
} Clock;

void init_timer(void);
void update_clock(Clock *clock);

#endif // TIMER_H
